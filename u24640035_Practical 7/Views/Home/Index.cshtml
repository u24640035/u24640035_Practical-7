@model List<u24640035_Practical_7.Models.Publication>

@{
    ViewBag.Title = "Publications";
}

<div class="container mt-4">
    <h1 class="mb-4">Publications</h1>

    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            var publication = Model[i];
            <div class="col-md-4 d-flex align-items-stretch mb-4">
                <div class="card h-100">
                    <img src="@publication.LeadingImage" class="card-img-top" alt="Publication image" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h6 class="text-muted">@publication.GetPublicationInfo()</h6>
                        <h5 class="card-title">@publication.Title</h5>
                        <p class="text-muted">by @publication.Author.Name</p>
                        <p class="card-text">@publication.Summary</p>
                        <a href="@publication.MainStoryURL" class="btn btn-primary mt-auto">Read more</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">@publication.GetFormattedDate()</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
